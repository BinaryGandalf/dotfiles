#!/usr/bin/bash

if i3wm=$(command -v i3) && [[ $TERMCLT=/dev/tty1 ]]; then
    if term=$(command -v $TERMINAL) && ! ps -e | grep $TERMINAL; then
        exec $term > /dev/null 2>&1 &
    fi
   
    if browser=$(command -v firefox) && ! ps -e | grep firefox; then
        exec $browser > /dev/null 2>&1 &
    fi
    
    if ! inxi -Gxx | grep compositor && comp=$(command -v picom) && ! ps -e | grep picom; then
        exec $comp > /dev/null 2>&1 &
    fi

    if expl=$(command -v Explorer) && ! ps -e | grep dolphin; then
        exec $expl > /dev/null 2>&1 &
    fi

    if discordclt=$(command -v Discord) && ! ps -e | grep Discord; then
        exec $discordclt > /dev/null 2>&1 &
    fi

    if spotifyclt=$(command -v spotify) && ! ps -e | grep spotify; then
        exec $spotifyclt > /dev/null 2>&1 &
    fi
    
    exec $i3wm > /dev/null 2>&1

elif plasmawm=$(command -v startplasma-x11) && [[ $TERMCLT=/dev/tty2 ]]; then
    exec $plasmawm > /dev/null 2>&1
fi
