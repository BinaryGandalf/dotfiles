set $mod Mod1
set $mod_mode Mod4
floating_modifier $mod

font pango:Hack Nerd Font Mono 8
exec --no-startup-id feh --bg-fill ~/Pictures/MorgothVsFingolfin.jpg ~/Pictures/EowynVsWitchKingOfAngmar.jpg

set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym $mod+Ctrl+c exec --no-startup-id i3-msg reload
bindsym $mod+Ctrl+r exec --no-startup-id i3-msg restart
bindsym $mod+Ctrl+e exec --no-startup-id i3-msg exit
bindsym $mod+Ctrl+q exec --no-startup-id i3-msg kill

bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
bindsym $mod+d exec --no-startup-id dmenu_run -i -b

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+f fullscreen toggle

bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

bindsym $mod+space floating toggle
bindsym $mod+Ctrl+space focus mode_toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "0"

workspace $ws1 output DP-0 
workspace $ws2 output DP-0 
workspace $ws3 output DP-2  
workspace $ws4 output DP-2
workspace $ws5 output DP-0 
workspace $ws6 output DP-0 
workspace $ws7 output DP-2  
workspace $ws8 output DP-2
workspace $ws9 output DP-0 
workspace $ws0 output DP-2  

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

bindsym $mod+Ctrl+1 move container workspace $ws1, workspace $ws1
bindsym $mod+Ctrl+2 move container workspace $ws2, workspace $ws2
bindsym $mod+Ctrl+3 move container workspace $ws3, workspace $ws3
bindsym $mod+Ctrl+4 move container workspace $ws4, workspace $ws4
bindsym $mod+Ctrl+5 move container workspace $ws5, workspace $ws5
bindsym $mod+Ctrl+6 move container workspace $ws6, workspace $ws6
bindsym $mod+Ctrl+7 move container workspace $ws7, workspace $ws7
bindsym $mod+Ctrl+8 move container workspace $ws8, workspace $ws8
bindsym $mod+Ctrl+9 move container workspace $ws9, workspace $ws9
bindsym $mod+Ctrl+0 move container workspace $ws0, workspace $ws0

for_window [all] border none
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

assign [class="Alacritty"] $ws1
assign [class="firefox"] $ws3

for_window [class="discord" window_type="normal"] floating enable, move scratchpad
for_window [class="Spotify" window_type="normal"] floating enable, move scratchpad

bindsym $mod+Shift+d [class="discord"] scratchpad show, move position center
bindsym $mod+Shift+s [class="Spotify"] scratchpad show, move position center

exec xss-lock --transfer-sleep-lock -- i3lock --nofork -u -i ~/Pictures/OneRing.png -t
set $mode_system "System: (l) lock, (e) logout, (s) suspend, (r) reboot, (p) shutdown"
bindsym $mod_mode+Return mode $mode_system
mode $mode_system {
    bindsym l exec --no-startup-id loginctl lock-session, mode "default"
    bindsym e exec --no-startup-id pkill -u $(whoami), mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot -i, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Return mode "default"
}

bar {
    status_command i3status
    mode hide
    modifier $mod_mode
    tray_output none
}

exec --no-startup-id i3-sensible-terminal
exec --no-startup-id firefox
exec --no-startup-id Discord
exec --no-startup-id spotify

