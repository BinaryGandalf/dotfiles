set $mod Mod1
set $mod_meta Mod4
floating_modifier $mod

font pango:DejaVu Sans 8

set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym $mod+e exit
bindsym $mod+q kill
bindsym $mod+c restart 
bindsym $mod+x reload 

bindsym $mod+o exec --no-startup-id loginctl lock-session
bindsym $mod+r exec --no-startup-id systemctl reboot
bindsym $mod+s exec --no-startup-id systemctl suspend
bindsym $mod+p exec --no-startup-id systemctl poweroff

bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+m exec --no-startup-id mousetoggle

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+b split horizontal
bindsym $mod+v split vertical

bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

bindsym $mod+f fullscreen toggle
bindsym $mod+space floating toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

workspace $ws1 output DP-0 
workspace $ws2 output DP-0 
workspace $ws3 output DP-2  
workspace $ws4 output DP-2
workspace $ws5 output DP-0 
workspace $ws6 output DP-0 
workspace $ws7 output DP-2  
workspace $ws8 output DP-2
workspace $ws9 output DP-0 

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

bindsym $mod+Ctrl+1 move container workspace $ws1, workspace $ws1
bindsym $mod+Ctrl+2 move container workspace $ws2, workspace $ws2
bindsym $mod+Ctrl+3 move container workspace $ws3, workspace $ws3
bindsym $mod+Ctrl+4 move container workspace $ws4, workspace $ws4
bindsym $mod+Ctrl+5 move container workspace $ws5, workspace $ws5
bindsym $mod+Ctrl+6 move container workspace $ws6, workspace $ws6
bindsym $mod+Ctrl+7 move container workspace $ws7, workspace $ws7
bindsym $mod+Ctrl+8 move container workspace $ws8, workspace $ws8
bindsym $mod+Ctrl+9 move container workspace $ws9, workspace $ws9

workspace_auto_back_and_forth yes
popup_during_fullscreen smart
focus_on_window_activation smart
focus_follows_mouse yes
smart_borders on

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

assign [class="kitty" window_type="normal"] $ws1
assign [class="Vivaldi-stable" window_type="normal"] $ws3

for_window [class="Spotify" window_type="normal"] floating enable, move scratchpad
bindsym $mod+Shift+s [class="Spotify"] scratchpad show, move position center

set $mode_unleashed Unleashed
set $mode_default_name Default
set $mode_change exec --no-startup-id notify-send -u low "(I) i3wm" "Switched mode:<i>
set $mode_change_end </i>"

bindsym $mod_meta+Return mode $mode_unleashed, $mode_change $mode_unleashed $mode_change_end
mode $mode_unleashed {
    bindsym $mod_meta+Return mode "default", $mode_change $mode_default_name $mode_change_end
    bindsym $mod_meta+Escape mode "default", $mode_change $mode_default_name $mode_change_end
}

bar {
    i3bar_command i3bar
    status_command i3status
    position top
    binding_mode_indicator no
    tray_output DP-2
}

exec --no-startup-id ibus-daemon -drxR
exec --no-startup-id picom
exec --no-startup-id numlockx on
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork -t
exec --no-startup-id i3-sensible-terminal 
exec --no-startup-id vivaldi
exec --no-startup-id spotify
